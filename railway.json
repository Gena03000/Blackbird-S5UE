{
  "build": {
    "builder": "docker"
  },
  "deploy": {
    "startCommand": "node server.js",
    "restartPolicy": "always",
    "healthcheck": {
      "path": "/",
      "interval": 10000,
      "timeout": 3000,
      "retries": 5
    }
  },
  "env": {
    "NODE_ENV": "production",
    "PORT": "3000"
  }
}
